<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:focusable="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" android:focusable="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:focusable="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:textColor="#000000" android:visibility="invisible"/>

            <TextView
                android:id="@+id/textViewLecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
           <!-- <Button
                android:id="@+id/buttoncontentid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewLecture"
                android:focusable="false"
                android:text="Preview" android:visibility="invisible"
                />-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>