<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_Tracking">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="4dp" >

        <TextView
            android:id="@+id/textViewCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_above="@+id/circularProgressBar"
            android:layout_marginBottom="5dp"
             android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"  android:gravity="center"/>



    <ProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:indeterminate="false"
        android:progress="50" android:max="100"
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="progress" />

        <TextView
            android:id="@+id/textViewSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circularProgressBar"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>